<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/counter"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:focusableInTouchMode="true"
    tools:context=".MainCounterActivity">

    <TextView
        android:id="@+id/focusView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="120dp"
        android:gravity="center"
        android:text="打ち始めゲーム数"
        android:textAlignment="center"
        android:textColor="#74D60C"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/total"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="50dp"
        android:gravity="center"
        android:text="総ゲーム数"
        android:textAlignment="center"
        android:textColor="#74D60C"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/individual"
        app:layout_constraintStart_toEndOf="@+id/start"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/individual"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:text="個人ゲーム数"
        android:textAlignment="center"
        android:textColor="#74D60C"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.849"
        app:layout_constraintStart_toEndOf="@+id/total"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/start_game"
        android:layout_width="110dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/a_3_smallrole_edit"
        android:backgroundTint="#5E5E6E"
        android:ems="10"
        android:hint="最大6桁"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:maxLength="6"
        android:minHeight="48dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="#A4A4AE"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/start" />

    <EditText
        android:id="@+id/total_game"
        android:layout_width="110dp"
        android:layout_height="48dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/a_3_smallrole_edit"
        android:backgroundTint="#5E5E6E"
        android:ems="10"
        android:hint="最大6桁"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:maxLength="6"
        android:minHeight="48dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="#A4A4AE"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/start_game"
        app:layout_constraintTop_toBottomOf="@+id/total" />

    <EditText
        android:id="@+id/individual_game"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="24dp"
        android:background="#00000000"
        android:focusable="false"
        android:gravity="center"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.573"
        app:layout_constraintStart_toEndOf="@+id/total_game"
        app:layout_constraintTop_toBottomOf="@+id/individual" />


    <Button
        android:id="@+id/alone_big"
        android:layout_width="0dp"
        android:layout_height="95dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="228dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/b_1_alone_big_bottun"
        android:onClick="aloneBigButton"
        android:text="@string/alone_big"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/cherry_big"
        app:layout_constraintHorizontal_bias="0.888"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/aB"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:background="#00000000"
        android:ems="10"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:maxLength="4"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/alone_big"
        app:layout_constraintEnd_toStartOf="@+id/cB"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/aB_Probability"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="1/0.00"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/aR"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alone_big"
        app:layout_constraintVertical_bias="0.0" />


    <Button
        android:id="@+id/cherry_big"
        android:layout_width="0dp"
        android:layout_height="95dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="228dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/b_2_cherry_big_bottun"
        android:onClick="cherryBigButton"
        android:text="@string/cherry_big"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/big_bonus"
        app:layout_constraintStart_toEndOf="@+id/alone_big"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/cB"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:background="#00000000"
        android:ems="10"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:maxLength="4"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/cherry_big"
        app:layout_constraintEnd_toStartOf="@+id/BB"
        app:layout_constraintStart_toEndOf="@+id/aB" />

    <TextView
        android:id="@+id/cB_Probability"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:text="1/0.00"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/cR"
        app:layout_constraintEnd_toStartOf="@+id/BB_Probability"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toEndOf="@+id/aB_Probability"
        app:layout_constraintTop_toBottomOf="@+id/cherry_big"
        app:layout_constraintVertical_bias="0.0" />


    <Button
        android:id="@+id/big_bonus"
        android:layout_width="0dp"
        android:layout_height="95dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="228dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/b_3_big_bottun"
        android:text="@string/big_bonus"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toEndOf="@+id/cherry_big"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/BB"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:background="#00000000"
        android:ems="10"
        android:focusable="false"
        android:inputType="number"
        android:maxLength="5"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/big_bonus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cB" />

    <TextView
        android:id="@+id/BB_Probability"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="1/0.00"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/RB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/big_bonus"
        app:layout_constraintVertical_bias="0.0" />


    <Button
        android:id="@+id/alone_reg"
        android:layout_width="0dp"
        android:layout_height="95dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/b_4_alone_reg_bottun"
        android:onClick="aloneRegButton"
        android:text="@string/alone_reg"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/cherry_reg"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alone_big" />

    <EditText
        android:id="@+id/aR"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:background="#00000000"
        android:ems="10"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:maxLength="4"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/alone_reg"
        app:layout_constraintEnd_toStartOf="@+id/cR"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/aR_Probability"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="1/0.00"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/ch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alone_reg"
        app:layout_constraintVertical_bias="0.0" />


    <Button
        android:id="@+id/cherry_reg"
        android:layout_width="0dp"
        android:layout_height="95dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/b_5_cherry_reg_bottun"
        android:onClick="cherryRegButton"
        android:text="@string/cherry_reg"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/reg_bonus"
        app:layout_constraintStart_toEndOf="@+id/alone_reg"
        app:layout_constraintTop_toBottomOf="@+id/cherry_big" />

    <EditText
        android:id="@+id/cR"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:background="#00000000"
        android:ems="10"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:maxLength="4"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/cherry_reg"
        app:layout_constraintEnd_toStartOf="@+id/RB"
        app:layout_constraintStart_toEndOf="@+id/aR" />

    <TextView
        android:id="@+id/cR_Probability"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:text="1/0.00"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/gr"
        app:layout_constraintEnd_toStartOf="@+id/RB_Probability"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toEndOf="@+id/aR_Probability"
        app:layout_constraintTop_toBottomOf="@+id/cherry_reg"
        app:layout_constraintVertical_bias="0.0" />


    <Button
        android:id="@+id/reg_bonus"
        android:layout_width="0dp"
        android:layout_height="95dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/b_3_big_bottun"
        android:text="@string/reg_bonus"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/cherry_reg"
        app:layout_constraintTop_toBottomOf="@+id/big_bonus" />

    <EditText
        android:id="@+id/RB"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:background="#00000000"
        android:ems="10"
        android:focusable="false"
        android:inputType="number"
        android:maxLength="5"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/reg_bonus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cR" />

    <TextView
        android:id="@+id/RB_Probability"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="1/0.00"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/addition"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reg_bonus"
        app:layout_constraintVertical_bias="0.0" />


    <Button
        android:id="@+id/cherry"
        android:layout_width="0dp"
        android:layout_height="95dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/b_6_cherry_bottun"
        android:onClick="cherryButton"
        android:text="@string/cherry"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/grapes"
        app:layout_constraintHorizontal_bias="0.228"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alone_reg"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/ch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:background="#00000000"
        android:ems="10"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:maxLength="5"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/cherry"
        app:layout_constraintEnd_toStartOf="@+id/gr"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/ch_Probability"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="1/0.00"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cherry"
        app:layout_constraintVertical_bias="0.0" />


    <Button
        android:id="@+id/grapes"
        android:layout_width="0dp"
        android:layout_height="95dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/b_7_grapes_bottun"
        android:onClick="grapesButton"
        android:text="@string/grapes"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bonus_addition"
        app:layout_constraintStart_toEndOf="@+id/cherry"
        app:layout_constraintTop_toBottomOf="@+id/cherry_reg"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/gr"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:background="#00000000"
        android:ems="10"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:maxLength="6"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/grapes"
        app:layout_constraintEnd_toStartOf="@+id/addition"
        app:layout_constraintStart_toEndOf="@+id/ch" />

    <TextView
        android:id="@+id/gr_Probability"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:text="1/0.00"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/addition_Probability"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toEndOf="@+id/ch_Probability"
        app:layout_constraintTop_toBottomOf="@+id/grapes"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/bonus_addition"
        android:layout_width="0dp"
        android:layout_height="95dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/b_3_big_bottun"
        android:text="@string/total_bonus"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/grapes"
        app:layout_constraintTop_toBottomOf="@+id/reg_bonus"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="SpeakableTextPresentCheck" />


    <EditText
        android:id="@+id/addition"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:background="#00000000"
        android:ems="10"
        android:focusable="false"
        android:inputType="number"
        android:maxLength="5"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/bonus_addition"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/gr" />

    <TextView
        android:id="@+id/addition_Probability"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="1/0.00"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bonus_addition"
        app:layout_constraintVertical_bias="0.0" />

    <ToggleButton
        android:id="@+id/togglecounteredit"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:textOff="カウント編集"
        android:textOn="編集OFF"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/toggleplusminus"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/toggleplusminus"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:text="ToggleButton"
        android:textOff="ボタン(―)"
        android:textOn="ボタン(＋)"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/togglecounteredit"
        app:layout_constraintStart_toEndOf="@+id/button2"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:onClick="resetButton"
        android:text="リセット"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/toggleplusminus"
        app:layout_constraintStart_toEndOf="@+id/storeregister"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/storeregister"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_twotone_access_time_24"
        android:onClick="storeRegister"
        app:layout_constraintEnd_toStartOf="@+id/button2"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/juggler"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="70dp"
        android:spinnerMode="dropdown"
        android:background="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>